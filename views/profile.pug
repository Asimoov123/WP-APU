              .widget 
                p.variable #{game_c}
                p games
              .widget 
                p.variable #{user_c}
                p users
              .widget 
                p.variable #{fav_c}
                p favorites
            #searchCol
              #searchBar 
                input(type="text" placeholder = "Search...")#searchInput
                svg#search-icon(height='24px' viewbox='0 -960 960 960' width='24px' fill='currentColor' onclick = "searchUser()")
