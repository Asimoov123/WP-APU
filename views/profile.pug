          img(src = "./images/Background.png").bg_img
      #overlay
        main
          #optionSlider
          #textContainer 
            p(onclick = "activateLogin()")#login Login 
            p(onclick = "activateSignup()" class = "active")#signup Sign up
          form(id = "loginForm")
            .loginInputContainer
              label(for = "mailInput") Mail :
              input(type = "email" id = "mailLogin" name = "mail")
              label(for = "passwordLogin") Password :
              input(type = "password" id = "passwordLogin" name = "password")
            input(type = "submit" id = "submitLogin" value = "Login")
          form(action = "/signup" method = "post" id = "signupForm")
            #topFormCont 
              .topFormInput 
                label(for = "nameInput") Name :
                input(type = "text" id = "nameInput" name = "name")
              .topFormInput 
                label(for = "surnameInput") Surname :
                input(type = "text" id = "surnameInput" name = "surname")
            .loginInputContainer
              label(for = "mailInput") Mail :
              input(type = "email" id = "mailSignup" name = "mail")
              label(for = "passwordLogin") Password :
              input(type = "password" id = "passwordSignup" name = "password")
            input(type = "submit" id = "submitSignup" value = "Sign up")
    else if role && role === "admin"
      .pageContainer
        h1 Admin
        a.LogOut(href = "/logout") Log out
    else
      .pageContainer
        img(src = "./images/HappyDinoViolet.png").happyDino
        img(src = "./images/HappyDinoViolet.png").happyDino
        h1 My_account
        #userData
          svg#edit-icon(height='24px' viewbox='0 -960 960 960' width='24px' fill='currentColor' onclick = "toggleEditUser()")
            path(d='M200-120q-33 0-56.5-23.5T120-200v-560q0-33 23.5-56.5T200-840h357l-80 80H200v560h560v-278l80-80v358q0 33-23.5 56.5T760-120H200Zm280-360ZM360-360v-170l367-367q12-12 27-18t30-6q16 0 30.5 6t26.5 18l56 57q11 12 17 26.5t6 29.5q0 15-5.5 29.5T897-728L530-360H360Zm481-424-56-56 56 56ZM440-440h56l232-232-28-28-29-28-231 231v57Zm260-260-29-28 29 28 28 28-28-28Z')
          #userIdentityCont
            .userBlock
              p name :
              p#nameUser #{name}
              input(type = "text" placeholder = "Name")#nameUserInput
            .userBlock
              p surname : 
              p#surnameUser #{surname}
              input(type = "text" placeholder = "Surname")#surnameUserInput
          #userLogsCont
            p#userMail mail : #{mail}
            .userRows
              label(for = "userpwd") new password
              input(type = "password" id = "userpwd")
            .userRows
              label(for = "confirmUserPwd") confirm new password
              input(type = "password" id = "confirmUserPwd")
          p#saveButton(onclick = "saveData()") Save
        a.LogOut(href = "/logout" ) Log out
        a#deleteButton(onclick = "deleteAccountUser()") Delete Account
