                1208 1041 584 517 880 857 1064 1220 147 290 205 583 178 889 -36 390 -173\
                696 -426 947 -177 176 -371 287 -601 344 -369 91 -738 24 -1038 -190 -161\
                -114 -339 -312 -443 -491 -21 -37 -41 -68 -44 -68 -3 0 -23 31 -44 68 -104\
                179 -282 377 -443 491 -90 64 -228 136 -318 166 -168 56 -405 77 -580 51z')

    h1 Quiz sur les jeux vidéo
    form(action="/submitquiz" method="POST" style="color: white; margin-top: 50px;")
        // Question 1
        fieldset(style="margin-bottom: 20px;")
            legend Question 1 : Dans quel jeu Mario apparaît-il pour la toute première fois ?
            label
                input(type="radio" name="question1" value="Super Mario Bros") 
                | Super Mario Bros
            label
                input(type="radio" name="question1" value="Donkey Kong")
                | Donkey Kong
            label
                input(type="radio" name="question1" value="Mario Kart")
                | Mario Kart
            label
                input(type="radio" name="question1" value="Fast And Furious")
                | Fast And Furious


        // Question 2
        fieldset(style="margin-bottom: 20px;")
            legend Question 2 : Quel est le nom du célèbre jeu de construction et d'exploration composé de blocs ?
            label
                input(type="radio" name="question2" value="Minecraft")
                | Minecraft
            label
                input(type="radio" name="question2" value="Terraria")
                | Terraria
            label
                input(type="radio" name="question2" value="Roblox")
                | Roblox

        // Question 3
        fieldset(style="margin-bottom: 20px;")
            legend Question 3 : Dans la série *The Legend of Zelda*, quel est le nom du héros principal ?
            label
                input(type="radio" name="question3" value="Link")
                | Link
            label
                input(type="radio" name="question3" value="Zelda")
                | Zelda
            label
                input(type="radio" name="question3" value="Ganondorf")
                | Ganondorf

        // Submit button
        button(type="submit") Envoyer mes réponses

        if(result)
            p Your result is #{Math.round(result)}%;
    