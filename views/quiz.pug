doctype html
html
  head
    title WSIP - Quiz
    meta(name="viewport", content="width=device-width, initial-scale=1.0 minimum-scale=1.0")
    link(rel="icon" type="image/x-icon" href="/images/dashSenaIco.png")
    link(rel="stylesheet" href="/stylesheets/global.css")
