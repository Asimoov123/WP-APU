    link(rel="stylesheet" href="/stylesheets/profile.css")
  body
    header(data-loggedStatus=user && user.length > 0 ? 'true' : 'false')
      #normalHeaderCont
        a(href = "./")#homeButton what should i play 
        #profileCont
          a(href = "./library")#libraryButton
            svg(viewbox='0 0 512.000000 512.000000')
              g(transform='translate(0.000000,512.000000) scale(0.100000,-0.100000)' fill='currentColor' stroke = 'currentColor')
